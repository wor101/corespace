<% if session[:message] %>
  <h3 class="message"><%= session.delete(:message) %></h3>
<% end %>

<h1><%= @trader['name'] %></h1>

<ul>
  <% @class_skills.each_pair do |skill, details| %>
    <% if @trader['skills'].keys.include?(skill) %>
      <li>
        <%= details['name'] %>
        <ul>
          <% (1..3).each do |level| %>
            <% unless details[level].nil? || @trader['skills'][skill].to_i < level.to_i %>
              <li><%= level %>: <%= details[level] %></li>
            <% end %>
          <% end %>
        </ul>
      </li>
    <% end %>
  <% end %>
</ul>


